



<h1 class="text-secondary"><u><b>Identification</b></u></h1>

{% if error is defined %}
	<div class="alert alert-danger" role="alert">
	  {{ error.messageKey|trans(error.messagedata, 'security', "Fr") }}
	</div>
{% endif %}

<!-- Affichage message après inscription -->
{% if inscriptionSuccess is defined %}
	<div class ="row d-block d-md-none">
		  <div class="alert alert-success" role="alert">Merci de vous êtes inscrit. vous pouvez désormais vous connecter.</div>
	</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
	<div class="form-group">
	    <label for="username">Email</label>
	    	{% if last_Username is defined %}
				<input type="email" value="{{ last_Username }}" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Votre email" name="_username">
	    	{% else %}
    			<input type="email" value="" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Votre email" name="_username">
			{% endif %}    
	    <small id="emailHelp" class="form-text text-muted d-none d-md-block">Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.</small>
	</div>
	<div class="form-group">
	    <label for="password">Mot de Passe</label>
	    <input type="password" class="form-control" id="password" placeholder="Votre mot de passe" name="_password">
	</div>
	<div class="form-group form-check">
	    <input type="checkbox" class="form-check-input" id="RememberMe">
	    <label class="form-check-label" for="RememberMe">Se souvenir de moi</label>
	</div>
	<div class="text-right"><button type="submit" class="btn btn-secondary text-right">Se connecter</button></div>
</form>