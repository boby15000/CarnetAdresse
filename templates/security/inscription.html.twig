
{% extends 'base.html.twig' %}

{# {% form_theme form 'authentification/forms/themes/inscription.html.twig' %} #}



{% block body %}
	
	
	<div class ="row mt-5">

		{# Affichage du Titre #}
		<div class="col-12 col-sm-12 col-md-4 offset-md-4">
			<h1 class="ecritureTitre"><u>Inscription</u></h1>
		</div>
		{# Fin d'affichage du Titre #}


	
	
		{# Affichage du formulaire d'inscription #}
		<div class="col-12 col-md-4 offset-md-4" style="">
			{{ form_start ( form  ) }}
			    <div class="form-row">
			    	<div class="form-group col-md-12">
						{{ form_errors(form) }}
					</div>
			    	<div class="form-group col-12 col-md-6">
			        	{{ form_label(form.nom) }}
			        	{{ form_errors(form.nom) }}
			    		{{ form_widget(form.nom) }}
			        </div>
			        <div class="form-group col-12 col-md-6">
			        	{{ form_label(form.prenom) }}
			        	{{ form_errors(form.prenom) }}
			        	{{ form_widget(form.prenom) }}
			        </div>
			        <div class="form-group col-md-12">
			        	{{ form_label(form.email) }}
			    		{{ form_widget(form.email) }}
			    		{{ form_help(form.email) }}
			        </div>
			    	<div class="form-group col-md-12">
			        	{{ form_label(form.motdepasse.first) }}
			    		{{ form_widget(form.motdepasse.first) }}
			    		{{ form_help(form.motdepasse.first) }}	        	
			        </div>
			        <div class="form-group col-md-12">
			        	{{ form_label(form.motdepasse.second) }}
			    		{{ form_widget(form.motdepasse.second) }}
			        </div>
					<div class="form-group col-md-12 text-right">
						{{ form_label(form.captcha) }}
						{{ form_widget(form.captcha) }}
						{{ form_widget(form.save) }}
			        </div>
			    </div>
			{{ form_end(form) }}
		</div>
		{# Fin d'affichage du formulaire d'inscription #}


	{# DÃ©but de l'insertion du JavaScript #}
	{% block javascripts %}
	    <script src="{{ asset('js/recaptcha.js') }}"></script>
	{% endblock %}
	{# Fin de l'insertion du JavaScript #}


{% endblock %}